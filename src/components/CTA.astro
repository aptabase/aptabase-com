---
import heroImage from "../assets/hero.png";
import { Image } from "astro:assets";

const { name } = Astro.props;

type CTASettings = {
  title: string;
  title2: string;
  description: string;
  url: string;
};

const forApps: CTASettings = {
  title: "Analytics for Apps",
  title2: "Without compromising on privacy",
  description:
    "Aptabase is a privacy-first analytics platform for mobile, desktop and web apps. Get insights into your app's usage in minutes.",
  url: "/?utm_campaign=blog_cta",
};

const options: {
  [key: string | "for-apps"]: CTASettings;
} = {
  "for-swift": {
    title: "Analytics for Swift apps",
    title2: "Without compromising on privacy",
    description:
      "Aptabase is a privacy-first analytics platform for Swift apps. Get insights into your app's usage in minutes.",
    url: "/for-swift?utm_campaign=blog_cta",
  },
  "for-tauri": {
    title: "Analytics for Tauri apps",
    title2: "Without compromising on privacy",
    description:
      "Aptabase is a privacy-first analytics platform for Tauri apps. Get insights into your app's usage in minutes.",
    url: "/for-tauri?utm_campaign=blog_cta",
  },
  "for-flutter": {
    title: "Analytics for Flutter apps",
    title2: "Without compromising on privacy",
    description:
      "Aptabase is a privacy-first analytics platform for Flutter apps. Get insights into your app's usage in minutes.",
    url: "/for-flutter?utm_campaign=blog_cta",
  },
  "for-maui": {
    title: "Analytics for MAUI apps",
    title2: "Without compromising on privacy",
    description:
      "Aptabase is a privacy-first analytics platform for .NET MAUI apps. Get insights into your app's usage in minutes.",
    url: "/for-maui?utm_campaign=blog_cta",
  },
};

const settings = options[name] ?? forApps;
---

<section class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 mt-20">
  <div
    class="overflow-hidden rounded-lg bg-gradient-to-tl from-cyan-300 to-primary shadow-xl lg:grid lg:grid-cols-2 lg:gap-2"
  >
    <div
      class="px-6 pb-12 pt-10 sm:px-16 sm:pt-16 lg:py-16 lg:pr-0 xl:px-20 xl:py-20"
    >
      <div class="lg:self-center">
        <p class="text-3xl font-title text-white sm:text-4xl">
          <span class="block">{settings.title}</span>
          <span class="block text-2xl">{settings.title2}</span>
        </p>
        <p class="mt-4 text-lg leading-6 text-gray-100">
          {settings.description}
        </p>
        <a
          href={settings.url}
          class="plausible-event-name=Blog+CTA mt-8 inline-flex items-center rounded-md border border-transparent bg-white px-5 py-3 text-base font-medium text-primary shadow hover:bg-indigo-50"
        >
          Learn more
        </a>
      </div>
    </div>
    <div class="aspect-h-3 aspect-w-5 -mt-6 md:aspect-h-1 md:aspect-w-2">
      <Image
        src={heroImage}
        alt="Aptabase Dashboard Screenshot"
        width={1300}
        height={911}
        class="translate-x-6 translate-y-6 transform rounded-md object-cover object-left-top sm:translate-x-16 lg:translate-y-20"
      />
    </div>
  </div>
</section>
