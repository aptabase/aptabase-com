---
import frameworks from "../lib/frameworks";
---

<div class="mt-20 mx-auto">
  <p class="tracking-tighter text-gray-700 mb-2">
    <span>Works with the framework of your choice!</span>
  </p>
  <div
    class="grid grid-cols-5 mx-4 md:mx-20 lg:mx-0 lg:flex items-center mt-8 gap-4 lg:gap-8"
  >
    {
      frameworks.map((fw) => (
        <a href={fw.href}>
          <img class="mx-auto h-14 w-14" src={fw.image} alt={fw.name} />
        </a>
      ))
    }
  </div>
</div>
