---
import SignUpOrDashboard from "./SignUpOrDashboard.astro";
import WorksWith from "./WorksWith.astro";
import { Image } from "astro:assets";
import heroImage from "../assets/hero.png";
---

<div class="pt-12 pb-24 lg:pb-40">
  <div class="mx-auto max-w-7xl px-2">
    <div class="mx-auto max-w-3xl text-center">
      <h1
        class="text-4xl font-bold tracking-tight sm:text-5xl md:text-6xl lg:text-7xl"
      >
        <span
          class="bg-gradient-to-r from-blue-400 to-primary bg-clip-text text-transparent"
        >
          Analytics for Apps
        </span>
        <span
          class="block text-2xl font-bold tracking-tight text-gray-900 lg:text-4xl mt-4"
        >
          Privacy-First. Simple. <br class="block sm:hidden" /> Real-Time.
        </span>
      </h1>
      <h2
        class="mt-6 text-base sm:text-2xl max-w-xl text-gray-600 mx-4 sm:mx-auto"
      >
        Open Source alternative to <br class="block md:hidden" /> Google
        Firebase Analytics.
      </h2>
      <div class="mt-10 flex items-center justify-center gap-x-6">
        <SignUpOrDashboard />
        <a
          href="/#features"
          class="text-sm font-semibold leading-6 text-gray-700 hover:text-gray-900"
        >
          Learn more
        </a>
      </div>
      <WorksWith />
    </div>
    <div class="mt-16 flow-root sm:mt-24">
      <div
        class="-m-2 rounded-xl bg-gray-900/5 p-2 ring-1 ring-inset ring-gray-900/10 lg:-m-4 lg:rounded-2xl lg:p-4"
      >
        <Image
          src={heroImage}
          alt="Aptabase Dashboard Screenshot"
          width={1296}
          height={833}
          class="w-[80rem] rounded-xl shadow-2xl ring-1 ring-gray-900/10"
        />
      </div>
    </div>
  </div>
</div>
