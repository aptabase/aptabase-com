---
import SignUpOrDashboard from "./SignUpOrDashboard.astro";
import WorksWith from "./WorksWith.astro";
import { Image } from "astro:assets";
import heroImage from "../assets/hero.png";
---

<div class="pt-12 pb-24 lg:pb-40">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="mx-auto max-w-3xl text-center">
      <h1 class="text-4xl font-bold tracking-tight md:text-6xl lg:text-7xl">
        <span
          class="bg-gradient-to-r from-cyan-500 to-blue-500 bg-clip-text text-transparent"
        >
          Analytics for Apps
        </span>
        <span
          class="block text-3xl font-bold tracking-tight text-gray-900 md:text-4xl lg:text-5xl"
        >
          Privacy-First. Simple. Real-Time.
        </span>
      </h1>
      <h2
        class="mt-6 text-base max-w-xl leading-8 text-gray-600 mx-2 md:mx-auto"
      >
        Essential data points for your app, keeping user privacy a top priority. <br
        />Open Source alternative to Google Firebase Analytics. <br />Built for
        Desktop, Mobile and Web apps. <br />
      </h2>
      <div class="mt-10 flex items-center justify-center gap-x-6">
        <SignUpOrDashboard />
        <a
          href="/#features"
          class="text-sm font-semibold leading-6 text-gray-700 hover:text-gray-900"
        >
          Learn more
        </a>
      </div>
      <WorksWith />
    </div>
    <div class="mt-16 flow-root sm:mt-24">
      <div
        class="-m-2 rounded-xl bg-gray-900/5 p-2 ring-1 ring-inset ring-gray-900/10 lg:-m-4 lg:rounded-2xl lg:p-4"
      >
        <Image
          src={heroImage}
          alt="Aptabase Dashboard Screenshot"
          width={1300}
          height={911}
          class="w-[76rem] rounded-xl shadow-2xl ring-1 ring-gray-900/10"
        />
      </div>
    </div>
  </div>
</div>
