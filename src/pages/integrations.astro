---
import ContentLayout from "../layouts/ContentLayout.astro";
import frameworks from "../lib/frameworks";
---

<ContentLayout
  title="Aptabase Integrations"
  description="Use Aptabase with your desired platform or framework."
>
  <div class="mx-auto max-w-5xl px-6 lg:px-8">
    <div class="mx-auto max-w-2xl text-center">
      <h1 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">
        Integrations
      </h1>
      <p class="mt-2 text-lg leading-6 text-gray-600">
        Here is a list of frameworks that you can use with Aptabase
      </p>
    </div>
    <div
      class="mt-8 gap-4 lg:gap-8 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3"
    >
      {
        frameworks.map((fw: any) => (
          <a
            href={fw.href}
            class="flex flex-row border border-gray-200 rounded-lg hover:shadow-md p-4 items-center gap-8"
          >
            <img class="h-14 w-14" src={fw.image} alt={fw.name} />
            <div>
              <h3 class="text-lg font-semibold leading-6 text-gray-900 line-clamp-2">
                {fw.name}
              </h3>
            </div>
          </a>
        ))
      }
    </div>
  </div>
</ContentLayout>
