{
  "github": {
    "silent": true
  },
  "headers": [
    {
      "source": "/avatar/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=604800"
        }
      ]
    },
    {
      "source": "/blogcover/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=86400"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/avatar/(.*)",
      "destination": "https://www.gravatar.com/avatar/$1"
    },
    {
      "source": "/p.js",
      "destination": "https://plausible.io/js/script.outbound-links.js"
    },
    {
      "source": "/e",
      "destination": "https://plausible.io/api/event"
    }
  ]
}
